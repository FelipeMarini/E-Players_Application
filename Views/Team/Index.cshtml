@model Team 

@{
    ViewData["Title"] = "Teams"; 
}

<div class="titulo_pagina">
    <h1>cadastro de @ViewData["Title"]</h1>
</div>


<form class="cadastro" method="POST" action='@Url.Action("Register")' enctype="multipart/form-data">
        
    <div class="campo">
        <label for="IdTeam">ID</label> 
        <input type="text" name="IdTeam" id="IdTeam"> 
    </div>

    <div class="campo">
        <label for="Name">Nome</label>
        <input type="text" name="Name" id="Name">
    </div>

    <div class="campo">
        <label for="Image">Imagem</label>
        <input type="file" name="Image" id="Image">
    </div>


    <button class="gradient btn" type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thread>
        <th>ID</th> 
        <th>Nome</th>
        <th>Imagem</th>
    </thread>

    <tbody>
        @foreach (Team item in ViewBag.teamsList)
        {
            <tr> 
                <td>@item.IdTeam</td> 
                <td>@item.Name</td>
                <td><img src="/img/Teams/@item.Image" alt="Imagem da equipe @item.Name" width="75" height="60"></td>
                <td><a asp-area="Link para excluir uma equipe" asp-controller="Team" asp-action="Delete"
                        asp-route-id="@item.IdTeam">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>
